<link rel="stylesheet" href="//cdn.jsdelivr.net/medium-editor/latest/css/medium-editor.min.css" type="text/css" media="screen" charset="utf-8">

<script src="/javascripts/getContent.js"></script>

<nav>
  <div class="container">
    <div class="left">
      <a class="btn" href="/">&lt; Home</a>

    </div>

  </div>
</nav>

<div class="content container">
  <div class="title title_editor" id="title">

  </div>

  <div class="body editable" id="body">

  </div>

  <form name="store" method="post" action="/new-post">
    <input type="hidden" name="title" id="title_input">
    <input type="hidden" name="body" id="body_input">
    <button onclick="setContents()" id="submitPost" type="submit">Submit</button>
  </form>

</div>


<script src="//cdn.jsdelivr.net/medium-editor/latest/js/medium-editor.min.js"></script>
<script>var title_editor = new MediumEditor('.title_editor', {
  placeholder: {
      /* This example includes the default options for placeholder,
        if nothing is passed this is what it used */
        text: 'Title'
      },

        toolbar: {
            buttons: ['h1', 'h2', 'h3', 'justifyLeft', 'justifyCenter', 'quote']
        },
});</script>
<script>var body_editor = new MediumEditor('.editable', {
  delay: 1000,
    targetBlank: true,
    toolbar: {
        buttons: ['h1', 'h2', 'h3', 'justifyLeft', 'justifyCenter', 'quote']
    },
    placeholder: {
        /* This example includes the default options for placeholder,
          if nothing is passed this is what it used */
          text: 'Write your story here...'
        },
    keyboardCommands: {
        /* This example includes the default options for keyboardCommands,
           if nothing is passed this is what it used */
        commands: [
            {
                command: 'bold',
                key: 'B',
                meta: true,
                shift: false,
                alt: false
            },
            {
                command: 'italic',
                key: 'I',
                meta: true,
                shift: false,
                alt: false
            },
            {
                command: 'underline',
                key: 'U',
                meta: true,
                shift: false,
                alt: false
            }
        ],
    }
});</script>
